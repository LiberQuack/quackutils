{
  "extends": "./base-tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/esm",
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "esnext",
    "moduleResolution": "Node",
    "jsx": "react-native",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      },
      {
        "name": "typescript-lit-html-plugin"
      }
    ],
    "declaration": true
  },
  "include": ["./src/*.ts"],
  "exclude": ["./dist"]
}
